{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "es6",
        "target": "es5",
        "jsx": "preserve",
        "allowJs": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
